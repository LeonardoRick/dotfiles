[
  {
    "bindings": {
      /**
       * Cursor control
       */
      "ctrl-shift-up": "editor::AddSelectionAbove",
      "ctrl-shift-down": "editor::AddSelectionBelow",
      "ctrl-up": [
        "editor::MoveUpByLines",
        {
          "lines": 5
        }
      ],
      "ctrl-down": [
        "editor::MoveDownByLines",
        {
          "lines": 5
        }
      ],
      "ctrl-cmd-up": [
        "editor::MoveUpByLines",
        {
          "lines": 10
        }
      ],
      "ctrl-cmd-down": [
        "editor::MoveDownByLines",
        {
          "lines": 10
        }
      ],
      "ctrl-cmd-shift-up": [
        "editor::SelectUpByLines",
        {
          "lines": 10
        }
      ],
      "ctrl-cmd-shift-down": [
        "editor::SelectDownByLines",
        {
          "lines": 10
        }
      ],
      "ctrl-e": "editor::Hover",
      /**
       * Pane control
       */
      // "cmd-alt-shift-ctrl-1": "",
      // "cmd-alt-shift-ctrl-2": "",

      "cmd-b": "workspace::ToggleRightDock",
      "cmd-;": "editor::ToggleComments",
      "cmd-l": "terminal_panel::ToggleFocus",
      "ctrl-0": "project_panel::ToggleFocus",
      "cmd-shift-c": "agent::ToggleFocus",
      "ctrl-cmd-right": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "right" }
      ],
      "ctrl-cmd-left": [
        "workspace::MoveItemToPaneInDirection",
        { "direction": "left" }
      ],
      "shift-ctrl-left": "pane::SwapItemLeft", // shift-alt-left (karabiner early change)
      "shift-ctrl-right": "pane::SwapItemRight", // shift-alt-right (karabiner early change)
      "ctrl-1": ["workspace::ActivatePane", 0],
      "ctrl-2": ["workspace::ActivatePane", 1],
      "ctrl-3": ["workspace::ActivatePane", 2],
      "ctrl-4": ["workspace::ActivatePane", 3],
      "ctrl-5": ["workspace::ActivatePane", 4],
      "ctrl-6": ["workspace::ActivatePane", 5],
      "ctrl-7": ["workspace::ActivatePane", 6],
      "ctrl-8": ["workspace::ActivatePane", 7],
      "ctrl-9": ["workspace::ActivatePane", 8],

      "cmd-1": ["pane::ActivateItem", 0],
      "cmd-2": ["pane::ActivateItem", 1],
      "cmd-3": ["pane::ActivateItem", 2],
      "cmd-4": ["pane::ActivateItem", 3],
      "cmd-5": ["pane::ActivateItem", 4],
      "cmd-6": ["pane::ActivateItem", 5],
      "cmd-7": ["pane::ActivateItem", 6],
      "cmd-8": ["pane::ActivateItem", 7],
      "cmd-9": ["pane::ActivateItem", 8],
      "cmd-0": "pane::ActivateLastItem"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-0": ["workspace::SendKeystrokes", "cmd-l ctrl-0"],
      "ctrl-1": ["workspace::SendKeystrokes", "cmd-l ctrl-1"],
      "ctrl-2": ["workspace::SendKeystrokes", "cmd-l ctrl-2"],
      "ctrl-3": ["workspace::SendKeystrokes", "cmd-l ctrl-3"],
      "ctrl-4": ["workspace::SendKeystrokes", "cmd-l ctrl-4"],
      "ctrl-5": ["workspace::SendKeystrokes", "cmd-l ctrl-5"],
      "ctrl-6": ["workspace::SendKeystrokes", "cmd-l ctrl-6"],
      "ctrl-7": ["workspace::SendKeystrokes", "cmd-l ctrl-7"],
      "ctrl-8": ["workspace::SendKeystrokes", "cmd-l ctrl-8"],
      "ctrl-9": ["workspace::SendKeystrokes", "cmd-l ctrl-9"],
      "cmd-0": ["workspace::SendKeystrokes", "cmd-l cmd-0"],
      "cmd-1": ["workspace::SendKeystrokes", "cmd-l cmd-1"],
      "cmd-2": ["workspace::SendKeystrokes", "cmd-l cmd-2"],
      "cmd-3": ["workspace::SendKeystrokes", "cmd-l cmd-3"],
      "cmd-4": ["workspace::SendKeystrokes", "cmd-l cmd-4"],
      "cmd-5": ["workspace::SendKeystrokes", "cmd-l cmd-5"],
      "cmd-6": ["workspace::SendKeystrokes", "cmd-l cmd-6"],
      "cmd-7": ["workspace::SendKeystrokes", "cmd-l cmd-7"],
      "cmd-8": ["workspace::SendKeystrokes", "cmd-l cmd-8"],
      "cmd-9": ["workspace::SendKeystrokes", "cmd-l cmd-9"],
      "cmd-shift-k": "pane::ActivateNextItem",
      "cmd-shift-j": "pane::ActivatePreviousItem",
      "ctrl-alt-shift-k": "workspace::NewTerminal",
      "ctrl-alt-shift-j": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Workspace",
    "bindings": {}
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-down": "project_panel::SelectNext"
    }
  }
]
